<Window x:Class="Parking.Admin.AdminUserFind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parking.Admin"
        mc:Ignorable="d"
        Title="AdminUserFind" Height="300" Width="600" MaxHeight="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF603A3A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel>
            <TextBlock FontSize="16" Foreground="Red" HorizontalAlignment="Center" >Поиск</TextBlock>
            <TextBlock FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0 20 0 0" >Поиск осуществляется по номеру телефона:</TextBlock>
            <TextBox x:Name="Fname" Width="300" Margin="0 20 0 0" Background="#FFCA2323" Foreground="#FFEDEDED"></TextBox>
            <Button Background="#FF882160" Margin="0 20 0 0" Width="200" Content="Найти" Click="Find_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
